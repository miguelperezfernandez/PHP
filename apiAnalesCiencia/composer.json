{
    "name": "tdw/aciencia",
    "type": "project",
    "description": "UPM - TDW - Slim4 Anales de la Ciencia",
    "license": "MIT",
    "homepage": "http://miw.etsisi.upm.es/",
    "keywords": ["php", "slim4", "doctrine", "phpunit", "openapi"],
    "authors": [
        {
            "name": "TDW UPM",
            "homepage": "http://www.etsisi.upm.es/",
            "email": "miw.etsisi@upm.es",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "TDW\\ACiencia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TDW\\Test\\ACiencia\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "composer/composer": "^2.3",
        "doctrine/annotations": "^1.13",
        "doctrine/orm": "^2.11",
        "lcobucci/jwt": ">=4.1.5",
        "monolog/monolog": "^2.5",
        "php-di/php-di": "^6.3",
        "ramsey/uuid": "^4.3",
        "selective/basepath": "2.1.*",
        "selective/config": "1.1.*",
        "slim/http": "^1.2",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/cache": "6.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.19",
        "infection/infection": "^0.26",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "TDW\\ACiencia\\Utility\\Install::preUpdateSchema",
            "TDW\\ACiencia\\Utility\\Install::postInstall"
        ],
        "start": "php -S 127.0.0.1:8000 -t public",
        "test": "bin/phpunit",
        "infection": ".\\bin\\infection --ansi --coverage=\"var\\coverage\" --threads=20 --only-covered"
    },
    "scripts-descriptions": {
        "start": "Lanza el servidor interno del int√©rprete de PHP",
        "test": "Ejecuta test con PHPUnit",
        "infection": "Runs the mutation testing."
    }
}
